<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

  <changeSet id="create-password-reset-token-table" author="Denis">

    <!-- Create table for password reset tokens -->
    <createTable tableName="password_reset_tokens">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="expiration_time" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Add foreign key constraint on user_id -->
    <addForeignKeyConstraint baseColumnNames="user_id"
      baseTableName="password_reset_tokens"
      constraintName="fk_password_reset_user"
      referencedColumnNames="id"
      referencedTableName="users"/>
  </changeSet>

</databaseChangeLog>
